<!DOCTYPE html>
<html>
  <head>
    <title>Actest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= render partial: 'bootstrap/navbar' %>
      <div class="fluid-container" style="margin-top: 70px">
        <div class="row">
          <div class="col-sm-2" style="position: fixed; top: 70px; left: 0">
            <% if user_signed_in? %>
              <h5>Chatroom</h5>
                <ul>
                  <% current_user.chatrooms.each do |chat|%>
                  <li><%= link_to chat.name, chat, data: {behavior: "chatroom-link",chatroom_id: chat.id}  %></li>
                  <% end %>
                
                </ul>
              <% end %>
          </div>

        <div class="col-sm-10 col-sm-offset-2">
        <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>
